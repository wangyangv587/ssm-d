<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name/>
    <param-value/>
  </context-param>

  <!-- 加载顺序：context-param  listener  filter  servlet -->

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class></filter-class>
  </filter>
  
  <!-- 配置前端控制器 -->
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!-- 设置spring配置文件路径 -->
    <!-- 如果不配置，那么DispatcherServlet会去找默认路径 -->
    <!-- 默认路径WEB-INF/springmvc-servlet.xml     ：servlet-name-servlet.xml -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-mvc.xml</param-value>
    </init-param>
    <!-- 初始化时机，设置为2，表示Tomcat启动时，DispatcherServlet会随之初始化 -->
    <!-- 如果不指定时机，DispatcherServlet就会在第一次请求时初始化 -->
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <!-- 为什么不使用/* ，因为/*会拦截所有请求，包含jsp和静态资源，对于静态资源springmvc提供了默认的处理器 -->
    <!-- 对于jsp，没有默认的处理器 -->
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
</web-app>